    "lz-string": "^1.5.0",
    "radash": "^12.1.1",
    "string-hash": "^1.1.3",
    "zod": "^4.1.13"
  },
  "description": "Rational indexing & cross-shard querying at scale in your NoSQL database so you can focus on your application logic.",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@karmaniverous/mock-db": "^0.4.0",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.1",
    "@types/string-hash": "^1.1.3",
    "auto-changelog": "^2.5.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "knip": "^5.70.2",
    "lefthook": "^2.0.4",
    "prettier": "^3.7.3",
    "release-it": "^19.0.6",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "tsd": "^0.33.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.15",
    "typedoc-plugin-mdn-links": "^5.0.10",
    "typedoc-plugin-replace-text": "^4.2.0",
    "typedoc-plugin-zod": "^1.4.3",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/eslint-plugin": "^1.5.1",
    "vitest": "^4.0.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/mjs/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/karmaniverous/entity-manager#readme",
  "keywords": [
    "dynamo-db",
    "sharding"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "name": "@karmaniverous/entity-manager",
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "commitMessage": "chore: release v${version}",
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "npm run lint",
        "npm run test",
        "npm run knip",
        "npm run build"
      ],
      "before:npm:release": [
        "npx auto-changelog -p",
        "npm run docs",
        "git add -A"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch ${branchName}"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karmaniverous/entity-manager.git"
  },
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "changelog": "auto-changelog",
    "docs": "typedoc",
    "knip": "knip",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix .",
    "release": "dotenvx run -f .env.local -- release-it",
    "release:pre": "npm run release -- --no-git.requireBranch --github.prerelease --preRelease",
    "test": "vitest --run --silent",
    "typecheck": "tsc && tsd"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "8.0.0"
}
