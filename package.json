    "commitLimit": false,
    "hideCredit": true,
    "output": "CHANGELOG.md",
    "unreleased": true
  },
  "bugs": {
    "url": "https://github.com/karmaniverous/entity-manager/issues"
  },
  "dependencies": {
    "@karmaniverous/batch-process": "^0.1.0",
