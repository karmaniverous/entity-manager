{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "exclude": ["coverage/", "dist/", "docs/", "test-d/"],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "eslint.config.ts",
    "rollup.config.ts",
    "vitest.config.ts"
  ]
}

